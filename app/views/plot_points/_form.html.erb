<%= render partial: 'shared/error_messages', locals: { object: @plot_point } %>

<%= form_for (@plot_point) do |f| %>
  <p>
  	<%= f.label :main_plot %>
  	<%= f.check_box :main_plot %>
  </p>

  <p>
  	<%= f.label :text %>
  	<%= f.text_area :description %>
  </p>
  <%= f.hidden_field :project_id, :value => @project.id %>

  <p>
  	<%= f.submit "Submit" %>
  </p>

<% end %>