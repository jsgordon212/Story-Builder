  <%= render partial: 'shared/error_messages', locals: { object: @character } %>

<%= form_for @character, :html => {:class => 'chapter-form'} do |f| %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>

  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :chapter_number %><br>
    <%= f.select("chapters", @project.chapters.map { |chapter| [ chapter.chapter_number, chapter.chapter_number]})%>
  </p>

    <%= f.hidden_field :project_id, :value => @project.id %>
  <p>
    <%= f.submit "Submit" %>
  </p>

<% end %>
