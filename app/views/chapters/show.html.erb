<div class= "container">
  <nav class="navbar navbar-default" id="chapters-nav">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/projects/<%=@chapter.project.id%>"><%= @chapter.project.title %></a>
      </div>
    <ul class="nav navbar-nav">
      <% @chapter.project.chapters.each do |chapter| %>
        <li><a id="/chapters/<%=chapter.id%>" class="chapter-button" href="/chapters/<%=chapter.id%>">Chapter <%= chapter.chapter_number %></a></li>
        <% end %>
        <li id="add-chapter"><%= link_to 'Add Chapter', new_project_chapter_path(@chapter.project) %></li>
    </ul>
  </nav>

<%= render partial: 'chapter', locals: {chapter: @chapter}%>
</div>